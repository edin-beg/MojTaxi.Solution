<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="MojTaxi.ClientApp.Pages.MainPage"
             BackgroundColor="Black"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*,70">

        <!-- 🔹 Gornji dio = MAPA -->
        <Grid Grid.Row="0">
            <maps:Map x:Name="mapControl"
                      MapType="Street"
                      IsShowingUser="True"
                      VerticalOptions="Fill"
                      HorizontalOptions="Fill" />
        </Grid>

        <!-- 🔹 Donji dio = custom tabovi kao buttoni -->
        <Grid Grid.Row="1" BackgroundColor="Black"
              ColumnDefinitions="*,*,*,*"
              Padding="5">

            <Button Text="Profil"
                    Clicked="OnTabClicked"
                    CommandParameter="Profile"
                    Style="{StaticResource TaxiButtonSmall}"
                    x:Name="BtnProfile"/>

            <Button Text="Ljubimci"
                    Clicked="OnTabClicked"
                    CommandParameter="Pets"
                    Style="{StaticResource TaxiButtonSmall}"
                    x:Name="BtnPets"
                    Grid.Column="1"/>

            <Button Text="Djeca"
                    Clicked="OnTabClicked"
                    CommandParameter="Kids"
                    Style="{StaticResource TaxiButtonSmall}"
                    x:Name="BtnKids"
                    Grid.Column="2"/>

            <Button Text="Posebno"
                    Clicked="OnTabClicked"
                    CommandParameter="Special"
                    Style="{StaticResource TaxiButtonSmall}"
                    x:Name="BtnSpecial"
                    Grid.Column="3"/>

        </Grid>

    </Grid>
</ContentPage>