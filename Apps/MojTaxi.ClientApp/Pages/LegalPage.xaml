<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MojTaxi.ClientApp.Pages.LegalPage"
             Title="Pravne informacije" BackgroundColor="Black">
    <VerticalStackLayout Padding="20" Spacing="12">
        <Button Text="Politika privatnosti" Command="{Binding OpenPrivacyPolicyCommand}" Style="{StaticResource TaxiButton}"/>
        <Button Text="Kontaktiraj podršku" Command="{Binding ContactSupportCommand}" Style="{StaticResource TaxiButton}"/>
        <Label Text="{Binding SupportEmail}" TextColor="Gray" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>