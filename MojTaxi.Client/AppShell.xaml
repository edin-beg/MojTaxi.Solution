<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MojTaxi.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MojTaxi.Client"
    xmlns:pages="clr-namespace:MojTaxi.Client.Pages"
    Title="MojTaxi.Client">

    <!-- Startne stranice -->
    <ShellContent 
      Route="LandingPage"
      ContentTemplate="{DataTemplate pages:LandingPage}"
      Shell.NavBarIsVisible="False" />

    <ShellContent 
      Route="LoginPage"
      ContentTemplate="{DataTemplate pages:LoginPage}"
      Shell.NavBarIsVisible="False" />

    <ShellContent 
      Route="RegistrationPage"
      ContentTemplate="{DataTemplate pages:RegistrationPage}"
      Shell.NavBarIsVisible="False" />


</Shell>
