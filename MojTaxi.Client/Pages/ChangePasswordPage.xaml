<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MojTaxi.Client.Pages.ChangePasswordPage"
             Title="Promjena passworda" BackgroundColor="Black">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Entry Placeholder="Trenutni password" IsPassword="True" Text="{Binding CurrentPassword}"/>
        <Entry Placeholder="Novi password" IsPassword="True" Text="{Binding NewPassword}"/>
        <Entry Placeholder="Potvrdi password" IsPassword="True" Text="{Binding ConfirmPassword}"/>
        <Button Text="Sačuvaj" Command="{Binding ChangePasswordCommand}" Style="{StaticResource TaxiButton}"/>
    </VerticalStackLayout>
</ContentPage>