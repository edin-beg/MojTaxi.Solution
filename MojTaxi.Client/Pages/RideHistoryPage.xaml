<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MojTaxi.Client.Pages.RideHistoryPage"
             Title="Arhiva vožnji" BackgroundColor="Black">
    <CollectionView ItemsSource="{Binding Rides}" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BackgroundColor="#1E1E1E" Padding="12" Margin="5" CornerRadius="12">
                    <Label Text="{Binding .}" TextColor="White" />
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>